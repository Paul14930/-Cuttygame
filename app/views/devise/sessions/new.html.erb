<div class="flex min-h-full">
  <div class="flex flex-1 flex-col justify-center px-4 py-12 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
    <div class="mx-auto w-full max-w-sm lg:w-96">
      <div>
      <%= image_tag("logo_cutygame.png", class:"h-10 mx-auto") %>
        <h2 class="mt-8 text-2xl font-bold leading-9 tracking-tight text-gray-900 flex justify-center">Sign in to your account</h2>
        <p class="mt-2 text-sm leading-6 text-gray-500 flex justify-center">
          Pas encore membre ?
          <%= link_to " Créer un nouveau profil", new_user_registration_path, class:"font-semibold text-indigo-600 hover:text-indigo-500"%>
        </p>
      </div>
      <div class="mt-10">
        <div>
          <form action="#" method="POST" class="space-y-6">
            <div>
              <label for="email" class="block text-sm font-medium leading-6 text-gray-900"></label>
              <div class="mt-2">
                <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" , class:"block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"}
               %>
              </div>
            </div>
            <div>
              <label for="password" class="block text-sm font-medium leading-6 text-gray-900"></label>
              <div class="mt-2 sm:text-sm">
               <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class:"block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
              </div>
            </div>
             <%# <div>
              <label for="password" class="block text-sm font-medium leading-6 text-gray-900"></label>
              <div class="mt-2">
              <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                required: true,
                input_html: { autocomplete: "new-password", class:"block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 mb-4", id:"password", name:"password", type:"password" } %>
              <%# </div>
            </div> %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                <label for="remember-me" class="ml-3 block text-sm leading-6 text-gray-700">Se souvenir de moi</label>
              </div>
              <div class="text-sm leading-6">
              <%= link_to "Mot de passe oublié ?", new_user_password_path, class:"font-semibold text-indigo-600 hover:text-indigo-500"  %>

              </div>
            </div>
            <div>
              <%= f.button :submit, "Joue maintenant", class:"flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 mt-4"  %>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="relative hidden w-0 flex-1 lg:block">
  <%= image_tag("image_sign-in.jpg", class:"absolute inset-0 h-full w-full object-cover") %>
  </div>
  <% end %>

</div>
