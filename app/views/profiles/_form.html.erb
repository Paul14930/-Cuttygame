

  <%= simple_form_for @profile do |f| %>
 <%= f.error_notification %>
  <div class="flex min-h-full">
    <div class="flex flex-1 flex-col justify-center px-4 py-12 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
      <div class="mx-auto w-full max-w-sm lg:w-96">
        <div>
        <%= image_tag("cutygame-noir.png", class:"h-25 mx-auto") %>
          <h2 class="mt-8 text-2xl font-bold leading-9 tracking-tight text-gray-900 flex justify-center">Quelques questions et on attaque le game</h2>
          <p class="mt-2 text-sm leading-6 text-gray-500 flex justify-center">

          </p>
        </div>
        <div class="mt-10">
          <div>
            <form action="#" method="POST" class="space-y-6">
              <div>
                <label for="username" class="block text-sm font-medium leading-6 text-gray-900"></label>
                <div class="mt-2">
                <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "username", class:"block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"}
                %>
                </div>
              </div>
              <div>
                <label for="decription" class="block text-sm font-medium leading-6 text-gray-900"></label>
                <div class="mt-2 sm:text-sm">
                <%= f.input :description,
                  required: true,
                autofocus: true,
                  input_html: { autocomplete: "description", class:"block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"} %>
                </div>
              </div>
              <div>
                <label for="genre" class="block text-sm font-medium leading-6 text-gray-900"></label>
                <div class="mt-2">
                <%= f.input :gender,
                  required: true,
                autofocus: true , collection: ['Homme', 'Femme'],
                  input_html: { autocomplete: "gender", class:"block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"} %>
                </div>
              </div>

              <div>
                <label for="photo" class="block text-sm font-medium leading-6 text-gray-900"></label>
                <div class="mt-2">
                <%= f.input :photo,
                  required: true,
                autofocus: true , as: :file,
                  input_html: { autocomplete: "photo", class:"block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"} %>
                </div>
              </div>

              <div class="flex items-center justify-between">

              </div>
              <div>
              <%= f.button :submit, "Joue maintenant", class:"flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 mt-4"  %>
              </div>
            </form>
          </div>
    <% end %>

        </div>
      </div>
    </div>
    <div class="relative hidden w-0 flex-1 lg:block">
    <%= image_tag("image_sign-in.jpg", class:"absolute inset-0 h-full w-full object-cover") %>
    </div>


  </div>

